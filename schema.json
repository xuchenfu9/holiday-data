{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Holiday Data",
  "type": "object",
  "required": ["region", "year", "lastUpdated", "holidays"],
  "properties": {
    "region": {
      "type": "string",
      "enum": ["CN", "US", "UK", "JP", "KR", "TW", "HK"],
      "description": "地区代码"
    },
    "year": {
      "type": "integer",
      "description": "年份"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date",
      "description": "最后更新日期"
    },
    "holidays": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "name", "isOffDay"],
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "日期 yyyy-MM-dd"
          },
          "name": {
            "type": "string",
            "description": "节日名称"
          },
          "isOffDay": {
            "type": "boolean",
            "description": "是否放假"
          }
        }
      }
    }
  }
}
